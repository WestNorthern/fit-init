<h1>Badges#index</h1>
<p>Find me in app/views/badges/index.html.erb</p>
<%= link_to "Create New Badge", new_badge_path %>


<div class="badge-list">
	<% @badges.each do |badge| %>
		<div class="user-badge">
			<h1><%= badge.title %></h1>	
			<h3><%= badge.description %></h3>
			<h3><%= badge.image_url %></h3>

			<%= link_to "Edit Badge", edit_badge_path(badge) %>
			<%= link_to "Delete Badge", badge_path(badge), method: :delete, class: 'delete-badge', remote: true %>

		</div>
	<% end %>
</div>
