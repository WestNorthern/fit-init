<div class="card workout_form">
	<%= form_with model: @badge, id: "workout-form" do |f| %>
		<%= f.text_field :title, placeholder: 'Name of Badge', class: 'title' %>
		<%= f.text_area :description, placeholder: 'Description', class: 'description' %>
		<%= f.hidden_field :user_id, value: current_user.id %>
		<%= f.text_field :image_url, placeholder: 'Image URL', class: 'image_url' %>
		<%= f.submit class: "hollow button secondary" %>
	<% end %>
	<br>
</div>